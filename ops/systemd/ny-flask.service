[Unit]
Description=Ny Paid Signing Flask App
After=network.target

[Service]
User=ny
WorkingDirectory=/opt/ny-paid-signing-fixed
Environment="PATH=/opt/ny-paid-signing-fixed/.venv/bin"
ExecStart=/opt/ny-paid-signing-fixed/.venv/bin/gunicorn -w 2 -b 127.0.0.1:8080 run_flask:app
Restart=always

[Install]
WantedBy=multi-user.target
